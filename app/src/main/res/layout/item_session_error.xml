<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/surface_dark"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Error Icon -->
        <ImageView
            android:id="@+id/errorIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_error"
            android:tint="@color/accent_red"
            android:layout_marginBottom="12dp" />

        <!-- Error Message -->
        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Failed to load session data"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <!-- Error Details (Secondary) -->
        <TextView
            android:id="@+id/errorDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check your connection and try again"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Retry Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/retryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retry"
                android:textColor="@color/text_primary"
                app:strokeColor="@color/accent_red"
                app:strokeWidth="1dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <!-- Dismiss Button (Optional) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dismissButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dismiss"
                android:textColor="@color/text_secondary"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Error Code/Type (Optional - for debugging) -->
        <TextView
            android:id="@+id/errorCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Error: NETWORK_TIMEOUT"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Alternative Compact Layout for List Items -->
    <LinearLayout
        android:id="@+id/compactErrorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Compact Error Icon -->
        <ImageView
            android:id="@+id/compactErrorIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_error"
            android:tint="@color/accent_red"
            android:layout_marginEnd="12dp" />

        <!-- Compact Error Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/compactErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session load failed"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/compactErrorTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="March 15, 2024 - 11:30 PM"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Compact Retry Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/compactRetryButton"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:icon="@drawable/ic_refresh"
            app:iconTint="@color/accent_red" />

    </LinearLayout>

</androidx.cardview.widget.CardView>